(library
  (name caqti)
  (public_name caqti)
  (wrapped false)
  (modules
    Caqti_connect
    Caqti_connect_sig
    Caqti_connection
    Caqti_connection_sig
    Caqti_compat
    Caqti_driver_lib
    Caqti_driver_info
    Caqti_error
    Caqti_driver_sig
    Caqti_driver_info
    Caqti_mult
    Caqti_pool
    Caqti_pool_sig
    Caqti_common
    Caqti_query
    Caqti_request
    Caqti_response_sig
    Caqti_sql
    Caqti_sql_io
    Caqti_stream
    Caqti_type
    Caqti_type_sig
    ; internal
    Caqti_heap
    Caqti_common_priv)
  (modules_without_implementation
    Caqti_connect_sig
    Caqti_connection_sig
    Caqti_response_sig
    Caqti_driver_sig
    Caqti_pool_sig
    Caqti_type_sig)
  (private_modules
    Caqti_compat)
  (library_flags (:standard -linkall))
  (libraries logs ptime uri))

(rule
  (target caqti_compat.ml)
  (deps caqti_compat.cppo.ml)
  (action (run %{bin:cppo} -V OCAML:%{ocaml_version} %{deps} -o %{target})))
